                                                                                                                                                                                                       <Window x:Class="xoyplot_zjk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:xoyplot_zjk"                                                                                                                                                                                                                                                                                             
        mc:Ignorable="d"                
       DataContext="{Binding RelativeSource={RelativeSource Self}}"                                                                                                                                                                                                               
        Title="MainWindow" Height="450" Width="800">
                                                                                                                                                                                                        
    <Grid>
        <oxy:Plot InvalidateFlag="{Binding Refresh}" Margin="80,0,0.333,-0.333">
            <oxy:Plot.Axes>
                <!--<oxy:TimeSpanAxis MaximumRange="100" Title="Time" StringFormat="g" Position="Bottom"/>-->
                <oxy:LinearAxis Title="Position" Position="Left" MinimumRange="5"/>
                <oxy:LinearAxis Minimum="{Binding lk_Minimum}" Name="lk_yaxi" Title="Position"  Position="Bottom"  />
            </oxy:Plot.Axes>
            <oxy:Plot.Series>
                <oxy:LineSeries MarkerFill="Green" MarkerType="Circle" Title="距离" DataFieldX="Time"
                        DataFieldY="Distance" LabelFormatString="{}{1:N0}"
                        ItemsSource="{Binding Measurements}"
                        StrokeThickness="2" Color="Blue" />
                <oxy:LineSeries Title="信号" MarkerFill="Green" MarkerType="Circle" DataFieldY="Sighal" Color="Red"  DataFieldX="Time"
                                LabelFormatString="{}{1:N0}" ItemsSource="{Binding Measurements}" 
                                />
            </oxy:Plot.Series>
        </oxy:Plot>
        <!--<Button Content="显示" Click="btn_click_show" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="产生数据" Click="btn_click_new" HorizontalAlignment="Left" Margin="19,144,0,0" VerticalAlignment="Top" Width="75"/>-->
    </Grid>
</Window>
